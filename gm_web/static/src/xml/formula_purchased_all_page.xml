<?xml version="1.0" ?>
<odoo>
    <template id="formula_purchased_all_page" name="All Formula Purchased Page">
        <t t-name="gm_web.formula_purchased_all_page">
            <t t-call="web.basic_layout">
                <t t-set="font_url" t-value="request.env['ir.config_parameter'].sudo().get_param('gm_scentopia.font_link')"/>
                <t t-set="font_family" t-value="request.env['ir.config_parameter'].sudo().get_param('gm_scentopia.font_name')"/>

                <t t-if="font_url">
                        <link rel="stylesheet" t-att-href="font_url"/>
                </t>
                <style>
                    body {
                        font-family: "<t t-esc="font_family or 'Poppins'"/>" !important;
                        background-color: #F9F2F0 !important;
                    }
                    .o_body_html{
                        padding : 0px 25px !important;
                    }
                    .img-profile{
                        width: 128px; 
                        height: 128px; 
                        border-radius: 50%;
                    }
                    .text-brown {
                        color: #5F3529 !important;
                    }
                    .img-avatar{
                        max-width: 300px; 
                        max-height: 400px;
                    }
                    .btn-custom{
                        padding: 12px 25px; 
                        font-size: 16px; 
                        background-color: #B17B67 !important; 
                        border: 1px solid #bb8470ff  !important; 
                        color: white !important; 
                        border-radius: 25px;
                        width: 100% !important;
                        height: 50px !important;
                    }
                    @media (max-width: 500px) {
                        .img-profile{
                            width: 90px; 
                            height: 90px; 
                        }
                        .img-avatar {
                            max-width: 200px; 
                            max-height: 300px; 
                        }
                        .container-home{
                            padding-top: 20px !important;
                        }
                        <!-- .o_body_html{
                            padding : 0px !important;
                        } -->
                    }
                    .row::-webkit-scrollbar {
                        display: none;
                    }
                    .formula_card{
                        border: 1px solid #bb8470ff; 
                        border-radius: 15px; 
                        padding: 5px 10px; 
                        background: white;  
                    }
                </style>
                <t t-set="title">All Purchased Formulas | Scentzania</t>
                <div class="container py-5 container-home" style="padding-bottom:100px !important;">
                    <!-- Profile section -->
                    <div class="row align-items-center mb-4">
                        <div class="col-5 col-md-3 text-end">
                            <img id="profile-photo"
                                t-att-src="user.image_1920 and '/web/image/res.users/%s/image_1920' % user.id or '/gm_web/static/src/img/upload.png'"
                                class="img-fluid img-profile rounded-circle" 
                                style="object-fit: cover; cursor: pointer;"
                                alt="Profile photo"/>
                                <input type="file" id="photo-input" accept="image/*" style="display:none;"/>
                        </div>
                        <div class="col-7 col-md-9" style="padding-left: 0px;">
                            <h4 class="text-brown fw-bold mb-0">
                                <t t-esc="user.name"/>
                            </h4>
                            <p class="text-brown mb-0" style="font-size: 12px;">
                                <t t-esc="avatar.name"/>
                            </p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <h5 class="text-brown" style="font-weight: bold;">Your Purchased Formulas</h5>
                        </div>
                    </div>
                    <div class="row">
                        <t t-foreach="formulas" t-as="formula_data" t-key="formula_data.id">
                            <div class="col-6" style="cursor: pointer; padding: 5px !important;" onclick="window.location.href='/my/formula-purchased/' + this.getAttribute('data-formula-id')" t-att-data-formula-id="formula_data.id">
                                <div class="formula_card" style="height: -webkit-fill-available;">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="mb-1 text-brown" style="font-size:14px;"><t t-esc="formula_data.formula_name"/></span>
                                        <span class="mb-1 text-brown" style="font-size:14px;"><t t-esc="formula_data.bottle_size"/></span>
                                    </div>
                                    <div>
                                        <t t-foreach="formula_data.purchase_formula_id.sample_citrus" t-as="citrus" t-key="citrus.id">
                                            <span class="badge" t-att-style="'font-size: 10px; background: %s; color:black;' % (fragrance.get(citrus.main_category_id.name.lower(), '#cccccc'))"><t t-esc="citrus.name_code"/></span>
                                        </t>
                                        <t t-foreach="formula_data.purchase_formula_id.sample_fresh" t-as="fresh" t-key="fresh.id">
                                            <span class="badge" t-att-style="'font-size: 10px; background: %s; color:black;' % (fragrance.get(fresh.main_category_id.name.lower(), '#cccccc'))"><t t-esc="fresh.name_code"/></span>
                                        </t>
                                        <t t-foreach="formula_data.purchase_formula_id.sample_floral" t-as="floral" t-key="floral.id">
                                            <span class="badge" t-att-style="'font-size: 10px; background: %s; color:black;' % (fragrance.get(floral.main_category_id.name.lower(), '#cccccc'))"><t t-esc="floral.name_code"/></span>
                                        </t>
                                        <t t-foreach="formula_data.purchase_formula_id.sample_woody" t-as="woody" t-key="woody.id">
                                            <span class="badge" t-att-style="'font-size: 10px; background: %s; color:black;' % (fragrance.get(woody.main_category_id.name.lower(), '#cccccc'))"><t t-esc="woody.name_code"/></span>
                                        </t>
                                        <t t-foreach="formula_data.purchase_formula_id.sample_oriental" t-as="oriental" t-key="oriental.id">
                                            <span class="badge" t-att-style="'font-size: 10px; background: %s; color:white;' % (fragrance.get(oriental.main_category_id.name.lower(), '#cccccc'))"><t t-esc="oriental.name_code"/></span>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>
                    
                <div class="fixed-bottom d-flex align-items-center justify-content-between p-3"
                    style="background: #F9F2F0; z-index: 1000;">
                    <a href="/my" class="text-decoration-none d-flex align-items-center justify-content-center">
                        <img src="/gm_web/static/src/img/prev.svg" alt="Back" class="img-fluid" style="width: 40px; height: 40px; object-fit: contain;"/>
                    </a>
                    <img src="/gm_web/static/src/img/logo.png" class="img-fluid" style="width: 150px; margin-right:30px; margin-top:-20px;" alt="Logo"/>
                    <div style="width:40px;"></div>
                </div>
                <div class="fixed-bottom p-3"
                    style="z-index: 2000; pointer-events: none;">
                    <div class="text-end">
                        <img t-att-src="'data:%s;base64,%s' % (avatar.get_image_mime('other'), avatar.decode_image(avatar.image))"
                                    alt="Avatar Image"
                                    class="img-fluid"
                                    style="height: 100px !important; z-index: 999; margin-right: 10%;" />
                    </div>
                </div>
                <script>
                    <![CDATA[
                        document.addEventListener("DOMContentLoaded", function () {
                            const photo = document.getElementById("profile-photo");
                            const input = document.getElementById("photo-input");
                            if (!photo || !input) return;
                            photo.addEventListener("click", () => input.click());
                            input.addEventListener("change", async () => {
                                const file = input.files[0];
                                if (!file) return;
                                const reader = new FileReader();
                                reader.onload = async function (e) {
                                    try {
                                        const response = await fetch("/api/upload_photo_profile", {
                                            method: "POST",
                                            headers: { "Content-Type": "application/json" },
                                            body: JSON.stringify({ image: e.target.result.split(",")[1] }),
                                        });                                     
                                        const result = await response.text();
                                        if (result === "success") {
                                            photo.src = e.target.result;
                                        } else {
                                            alert("Failed to upload photo.");
                                        }
                                    } catch {
                                        alert("An error occurred while uploading photo.");
                                    }
                                };
                                reader.readAsDataURL(file);
                            });
                        });
                    ]]>
                </script>
            </t>
        </t>
    </template>
</odoo>