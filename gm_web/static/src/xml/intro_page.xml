<?xml version="1.0" ?>
<odoo>
    <template id="intro_page_template" name="Intro Page">
        <t t-name="gm_web.intro_page_template">
            <t t-call="web.basic_layout">
                <t t-set="font_url" t-value="request.env['ir.config_parameter'].sudo().get_param('gm_scentopia.font_link')"/>
                <t t-set="font_family" t-value="request.env['ir.config_parameter'].sudo().get_param('gm_scentopia.font_name')"/>

                <t t-if="font_url">
                        <link rel="stylesheet" t-att-href="font_url"/>
                </t>
                <style>
                    body {
                        font-family: "<t t-esc="font_family or 'Poppins'"/>" !important;
                        background-color: #F9F2F0 !important;
                    }
                    .o_body_html{
                        padding : 0px 25px !important;
                    }
                    .img-profile{
                        width: 128px; 
                        height: 128px; 
                        border-radius: 50%;
                    }
                    .text-brown {
                        color: #5F3529 !important;
                    }
                    .img-avatar{
                        max-width: 300px; 
                        max-height: 400px;
                    }
                    .btn-custom{
                        padding: 12px 25px; 
                        font-size: 16px; 
                        background-color: #B17B67 !important; 
                        border: 1px solid #bb8470ff  !important; 
                        color: white !important; 
                        border-radius: 25px;
                        width: 100% !important;
                        height: 50px !important;
                    }
                    @media (max-width: 500px) {
                        .img-profile{
                            width: 90px; 
                            height: 90px; 
                        }
                        .img-avatar {
                            max-width: 200px; 
                            max-height: 300px; 
                        }
                        .container-home{
                            padding-top: 20px !important;
                        }
                        .o_body_html{
                            padding : 0px !important;
                        }
                    }
                    .bubble {
                        position: relative;
                        font-size: 12px;
                        line-height: 14px;
                        background: #fff;
                        border-radius: 40px;
                        padding: 15px;
                        text-align: center;
                        color: #000;
                        border: 1px solid #fff;
                    }

                    .bubble-bottom-left:before {
                        content: "";
                        width: 0px;
                        height: 0px;
                        position: absolute;
                        border-left: 24px solid #fff;
                        border-right: 12px solid transparent;
                        border-top: 12px solid #fff;
                        border-bottom: 20px solid transparent;
                        left: 32px;
                        bottom: -24px;
                    }
                    .bubble-bottom-right:before {
                        content: "";
                        width: 0px;
                        height: 0px;
                        position: absolute;
                        border-right: 24px solid #fff;
                        border-left: 12px solid transparent;
                        border-top: 12px solid #fff;
                        border-bottom: 20px solid transparent;
                        right: 32px;
                        bottom: -24px;
                    }
                    .bubble-right-middle {
                        position: relative;
                    }

                    .bubble-right-middle:before {
                        content: "";
                        position: absolute;
                        right: -20px;        
                        top: 50%;
                        transform: translateY(-50%);
                        width: 0;
                        height: 0;
                        border-top: 12px solid transparent;
                        border-bottom: 12px solid transparent;
                        border-left: 20px solid #fff; 
                    }
                    .bubble-wrapper {
                        display: flex;
                        align-items: center; 
                        justify-content: flex-end; 
                        gap: 10px; 
                        pointer-events: none;
                        margin-right: 10%;
                        margin-bottom: 50px;
                    }
                    .avatar-img{
                        height: 100px !important; 
                        z-index: 999; 
                        margin-right:8% !important;
                    }
                    @media (min-width: 768px) {
                        .avatar-img {
                            margin-right:20% !important;
                        }
                    }
                </style>
                <t t-set="title">Intro Page | Scentzania</t>
                
                        
                <div class="container d-flex flex-column position-relative" style="height: 75vh !important;">
                    <div class="flex-fill d-flex flex-column justify-content-start align-items-center py-3">
                        <div class="col-12 text-center">
                            <h1 style="font-size:50px"> Intro to App</h1>
                            <t t-if="flashcard.has_youtube_link and flashcard.youtube_link">
                                <div class="ratio ratio-16x9 mb-3">
                                    <iframe t-att-src="'https://www.youtube.com/embed/%s' % flashcard.youtube_link" title="YouTube video" allowfullscreen="allowfullscreen" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin"></iframe>
                                </div>
                            </t>
                            <t t-if="flashcard.image_1">
                                <div class="d-block mb-3">
                                    <img t-att-src="'data:%s;base64,%s' % (flashcard.get_image_mime(), flashcard.decode_image(flashcard.image_1))"
                                        alt="Flashcard Image"
                                        class="img-fluid d-block mx-auto"
                                        style="height: auto;" />
                                </div>
                            </t>
                            
                            <t t-if="flashcard.image_2 and flashcard.has_image_2">
                                <div class="d-block">
                                    <img t-att-src="'data:%s;base64,%s' % (flashcard.get_image_mime(), flashcard.decode_image(flashcard.image_2))"
                                        alt="Flashcard Image"
                                        class="img-fluid d-block mx-auto"
                                        style="height: auto;" />
                                </div>
                            </t>
                        </div>
                    </div>
                </div>
                <div class="fixed-bottom d-flex align-items-center justify-content-between p-3"
                    style="background: #F9F2F0; z-index: 1000;">
                    <a href="/perfume-journey/pre-intro" class="text-decoration-none d-flex align-items-center justify-content-center">
                        <img src="/gm_web/static/src/img/prev.svg" alt="Back" class="img-fluid" style="width: 40px; height: 40px; object-fit: contain;"/>
                    </a>
                    <img src="/gm_web/static/src/img/logo.png" class="img-fluid" style="width: 150px; margin-right:30px; margin-top:-20px;" alt="Logo"/>
                    <div class="text-decoration-none d-flex align-items-center justify-content-center" style="cursor: pointer;" t-att-data-location="location" onclick="handleNextClick()">
                        <img src="/gm_web/static/src/img/next.svg" alt="Next" class="img-fluid" style="width: 40px; height: 40px; object-fit: contain; "/>
                    </div>
                </div>
                <div class="fixed-bottom d-flex align-items-center justify-content-end p-3"
                    style="z-index: 1500;pointer-events: none;">
                    <img t-att-src="'data:%s;base64,%s' % (avatar.get_image_mime('other'), avatar.decode_image(avatar.image))"
                        alt="Avatar Image"
                        class="img-fluid avatar-img"/>
                </div>
                <div class="fixed-bottom p-3"
                    style="z-index: 2000; pointer-events: none;">
                    <div class="bubble-wrapper">
                        <div class="bubble bubble-right-middle text-brown" style="max-width: 400px; margin-right:30%;">
                            <p style="margin-bottom:0px !important;">
                                <t t-esc="flashcard.subtext or ''"/>
                            </p>
                        </div>

                    </div>
                </div>
                <script>
                    function handleNextClick() {
                        const location = document.querySelector('[data-location]').getAttribute('data-location') || localStorage.getItem('location') || '';
                        if (location == "scentzania"){
                            window.location.href = `/perfume-journey/intro/scent-paper`;
                            return;
                        }
                        else if (location == "team_building"){
                            window.location.href = `/perfume-journey/fragrance-selection?location=${location}`;
                            return;
                        }
                    }
                </script>
            </t>
        </t>
    </template>
</odoo>