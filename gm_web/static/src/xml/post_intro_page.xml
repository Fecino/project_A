        </t>
    </template>
    <template id="intro_formula_guide_page_template" name="Formula Guide Page">
        <t t-call="gm_web.post_intro_page_template">
            <t t-set="title">Formula Guide Page | Scentzania</t>
            <t t-set="prev_link"></t>
            <t t-set="next_link">/my</t>
        </t>
    </template>

</odoo>