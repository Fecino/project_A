<?xml version="1.0" ?>
<odoo>
    <template id="formula_bottling_finish_page" name="Formula Bottling Finish Page">
        <t t-name="gm_web.formula_bottling_finish_page">
            <t t-call="web.basic_layout">
                <t t-set="font_url" t-value="request.env['ir.config_parameter'].sudo().get_param('gm_scentopia.font_link')"/>
                <t t-set="font_family" t-value="request.env['ir.config_parameter'].sudo().get_param('gm_scentopia.font_name')"/>

                <t t-if="font_url">
                        <link rel="stylesheet" t-att-href="font_url"/>
                </t>
                <style>
                    body {
                        font-family: "<t t-esc="font_family or 'Poppins'"/>" !important;
                        background-color: #F9F2F0 !important;
                    }
                    .o_body_html{
                        padding : 0px 25px !important;
                    }
                    .img-profile{
                        width: 128px; 
                        height: 128px; 
                        border-radius: 50%;
                    }
                    .text-brown {
                        color: #5F3529 !important;
                    }
                    .img-avatar{
                        max-width: 300px; 
                        max-height: 400px;
                    }
                    .btn-custom{
                        padding: 12px 25px; 
                        font-size: 16px; 
                        background-color: #B17B67 !important; 
                        border: 1px solid #bb8470ff  !important; 
                        color: white !important; 
                        border-radius: 25px;
                        width: 100% !important;
                        height: 50px !important;
                    }
                    @media (max-width: 500px) {
                        .img-profile{
                            width: 90px; 
                            height: 90px; 
                        }
                        .img-avatar {
                            max-width: 200px; 
                            max-height: 300px; 
                        }
                        .container-home{
                            padding-top: 20px !important;
                        }
                        .o_body_html{
                            padding : 0px !important;
                        }
                    }
                    .bubble {
                        position: relative;
                        font-size: 12px;
                        line-height: 14px;
                        background: #fff;
                        border-radius: 40px;
                        padding: 15px;
                        text-align: center;
                        color: #000;
                        border: 1px solid #fff;
                    }

                    .bubble-bottom-left:before {
                        content: "";
                        width: 0px;
                        height: 0px;
                        position: absolute;
                        border-left: 24px solid #fff;
                        border-right: 12px solid transparent;
                        border-top: 12px solid #fff;
                        border-bottom: 20px solid transparent;
                        left: 32px;
                        bottom: -24px;
                    }
                    .bubble-bottom-right:before {
                        content: "";
                        width: 0px;
                        height: 0px;
                        position: absolute;
                        border-right: 24px solid #fff;
                        border-left: 12px solid transparent;
                        border-top: 12px solid #fff;
                        border-bottom: 20px solid transparent;
                        right: 32px;
                        bottom: -24px;
                    }
                </style>
                <t t-set="title">Formula Bottling | Scentzania</t>
                <div class="container py-5 container-home" style="padding-bottom:100px !important;">
                    <!-- Bubble section -->
                    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 60vh;">
                        <div class="mb-4">
                            <div class="bubble bubble-bottom-left text-brown">
                                <h4>Thank you!</h4>
                                <h6>Hope to see you again</h6>                
                            </div>
                        </div>
                        <div>
                            <img t-att-src="'data:%s;base64,%s' % (avatar.get_image_mime('other'), avatar.decode_image(avatar.image))"
                                alt="Avatar Image"
                                class="img-fluid rounded img-avatar"
                                style="height: auto;" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 text-center mt-4">
                            <h6>You can always login to see your formula. Save your UID for quick access.</h6>
                        </div>
                    </div>
                </div>
                <div class="fixed-bottom d-flex align-items-center justify-content-between p-3"
                    style="background: #F9F2F0; z-index: 1000;">
                    <div style="width:40px;"></div>
                    <img src="/gm_web/static/src/img/logo.png" class="img-fluid" style="width: 150px; margin-right:30px; margin-top:-20px;" alt="Logo"/>
                    <a href="/my" class="text-decoration-none d-flex align-items-center justify-content-center">
                        <img src="/gm_web/static/src/img/next.svg" alt="Next" class="img-fluid" style="width: 40px; height: 40px; object-fit: contain;"/>
                    </a>
                </div>
                <script>
                    <![CDATA[
                        document.addEventListener("DOMContentLoaded", function () {
                            const photo = document.getElementById("profile-photo");
                            const input = document.getElementById("photo-input");
                            if (!photo || !input) return;
                            photo.addEventListener("click", () => input.click());
                            input.addEventListener("change", async () => {
                                const file = input.files[0];
                                if (!file) return;
                                const reader = new FileReader();
                                reader.onload = async function (e) {
                                    try {
                                        const response = await fetch("/api/upload_photo_profile", {
                                            method: "POST",
                                            headers: { "Content-Type": "application/json" },
                                            body: JSON.stringify({ image: e.target.result.split(",")[1] }),
                                        });                                     
                                        const result = await response.text();
                                        if (result === "success") {
                                            photo.src = e.target.result;
                                        } else {
                                            alert("Failed to upload photo.");
                                        }
                                    } catch {
                                        alert("An error occurred while uploading photo.");
                                    }
                                };
                                reader.readAsDataURL(file);
                            });
                        });
                    ]]>
                </script>
            </t>
        </t>
    </template>
</odoo>