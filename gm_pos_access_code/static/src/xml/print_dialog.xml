<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="gm_pos_access_code.PrintDialog">
        <Dialog title="'Print Receipt'" size="'md'">
            <div class="p-3">
                <div class="text-center mb-3">
                    <h5>Access Code Receipt</h5>
                </div>
                
                <div class="receipt-preview p-3 border rounded bg-light">
                    <div class="text-center">
                        <p><strong>Booking Code:</strong> <t t-esc="props.bookingCode || 'N/A'"/></p>
                        <p><strong>Booking From:</strong> <t t-esc="props.bookingFrom || 'N/A'"/></p>
                        <p><strong>Booking Price:</strong> <t t-esc="props.bookingPrice || 'N/A'"/></p>
                        <p><strong>Bottle Size:</strong> <t t-esc="props.bottleSize || 'N/A'"/></p>
                        <hr/>
                        <h4>Access Code</h4>
                        <div class="access-code-display p-2 bg-white border rounded" style="font-size: 18px; font-weight: bold; letter-spacing: 2px;">
                            <t t-esc="props.accessCode"/>
                        </div>
                        <hr/>
                        <small class="text-muted">
                            Generated on: <t t-esc="new Date().toLocaleString()"/>
                        </small>
                        <br/>
                        <small class="text-muted">
                            Expires on: <t t-esc="props.expiryDate"/>
                        </small>
                    </div>
                </div>
            </div>
            
            <t t-set-slot="footer">
                <button class="btn btn-primary" t-on-click="onPrint" t-att-disabled="state.isPrinting">
                    <t t-if="!state.isPrinting">Print</t>
                    <t t-else="">Printing...</t>
                </button>
                <button class="btn btn-secondary" t-on-click="props.close">Cancel</button>
            </t>
        </Dialog>
    </t>
</templates>
