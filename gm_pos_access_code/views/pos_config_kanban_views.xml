    <record id="point_of_sale.action_pos_config_kanban" model="ir.actions.act_window">
        <field name="name">Point of Sale</field>
        <field name="path">point-of-sale</field>
        <field name="res_model">pos.config</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'default_generate_access_code': False}</field>
        <field name="domain">[('generate_access_code', '=', False)]</field>
        <field name="search_view_id" ref="point_of_sale.view_pos_config_search" />
        <field name="view_id" ref="view_pos_config_kanban_original" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new PoS
            </p><p>
                Configure at least one Point of Sale.
            </p>
        </field>
