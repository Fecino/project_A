<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_access_code_form" model="ir.ui.view">
        <field name="name">pos.access.code.form</field>
        <field name="model">pos.access.code</field>
        <field name="arch" type="xml">
            <form string="POS Access Code">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="use_access_code" type="object" class="oe_stat_button" icon="fa-check">
                            <field name="state" widget="statinfo" string="Status"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="booking_code"/>
                            <field name="booking_from"/>
                            <field name="booking_price"/>
                            <field name="bottle_size"/>
                            <field name="validity_value"/>
                            <field name="validity_unit"/>
                        </group>
                        <group>
                            <field name="create_date" readonly="1"/>
                            <field name="expiry_date" readonly="1"/>
                            <field name="is_expired" readonly="1"/>
                            <field name="is_valid" readonly="1"/>
                            <field name="state" readonly="1"/>
                        </group>
                    </group>
                    <group string="Usage Information">
                        <group>
                            <field name="usage_count" readonly="1"/>
                            <field name="max_usage"/>
                        </group>
                        <group>
                            <field name="last_used_date" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_pos_access_code_list" model="ir.ui.view">
        <field name="name">pos.access.code.list</field>
        <field name="model">pos.access.code</field>
        <field name="arch" type="xml">
            <list string="POS Access Codes" default_order="create_date desc">
                <field name="create_date"/>
                <field name="name"/>
                <field name="booking_code"/>
                <field name="booking_from"/>
                <field name="booking_price"/>
                <field name="bottle_size"/>
                <field name="validity_value"/>
                <field name="validity_unit"/>
                <field name="usage_count"/>
                <field name="max_usage"/>
                <field name="expiry_date"/>
                <field name="is_valid" widget="boolean_toggle"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="action_pos_access_code" model="ir.actions.act_window">
        <field name="name">POS Access Codes</field>
        <field name="res_model">pos.access.code</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_pos_access_code_list"/>
        <!-- <field name="search_view_id" ref="view_pos_access_code_search"/> -->
        <field name="context">{'search_default_order_by_create_date_desc': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first POS Access Code!
            </p>
            <p>
                POS Access Codes are generated for booking purposes and expire after 24 hours.
                You can set the maximum usage count for each code.
            </p>
        </field>
    </record>

    <menuitem id="menu_pos_access_code" name="POS Access Codes" action="action_pos_access_code" parent="point_of_sale.menu_point_of_sale" groups="base.group_user"/>

</odoo>