<odoo>
    <data>
        <!-- CRM Lead Form View Inherit -->
        <record id="crm_lead_view_form_inherit" model="ir.ui.view">
            <field name="name">crm.lead.form.inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <field name="lost_reason_id" position="after">
                    <field name="reason_of_loss" invisible="active" readonly="1" force_save="1"/>
                </field>                                
                <xpath expr="//page[@name='lead']//field[@name='function']" position="before">
                    <field name="designation"/>
                    <field name="no_of_employees"/>
                </xpath>
                <xpath expr="//page[@name='lead']//field[@name='function']" position="after">
                    <field name="fax"/>
                    <field name="email_opt_out"/>
                </xpath>
                <xpath expr="//page[@name='lead']//field[@name='website']" position="before">
                    <field name="annual_revenue" widget="monetary" options="{'currency_field': 'company_currency'}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
