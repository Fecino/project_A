<odoo>
    <data>
        <template id="survey_page_choose_report" name="Survey: print page">
            <t t-call="web.basic_layout">
                <t t-set="font_url" t-value="request.env['ir.config_parameter'].sudo().get_param('gm_scentopia.font_link')"/>
                <t t-set="font_family" t-value="request.env['ir.config_parameter'].sudo().get_param('gm_scentopia.font_name')"/>

                <t t-if="font_url">
                        <link rel="stylesheet" t-att-href="font_url"/>
                </t>
                <style>
                    body {
                        background-color: #F9F2F0 !important;
                        font-family: "<t t-esc="font_family or 'Poppins'"/>" !important;

                    }
                    .o_body_html{
                        padding: 0px 16px !important;
                    }
                    .title {
                        color: #a66f5b;
                        font-weight: 600;
                    }
                    .report-link {
                        background-color: #b27c6a;
                        color: white;
                        border-radius: 10px;
                        padding: 10px;
                        display: flex;
                        align-items: center;
                        justify-content: center;
                        height: 80px;
                        text-align: center;
                        text-decoration: none;
                        font-size: 16px;
                        font-weight: 500;
                        transition: background-color 0.3s;
                        
                    }
                    .report-link:hover {
                        background-color: #a06d5e;
                    }
                    .email-link {
                        background-color: #D9D9D9;
                        color: black;
                        font-weight: 600;
                        border-radius: 20px;
                        padding: 20px 40px;
                        text-decoration: none;
                        display: inline-block;
                    }
                </style>
                <t t-set="title">Choose Report | Scentzania</t>
                <div class="container text-center" style="padding-bottom:90px !important; padding-top:20px !important;">
                    <h3 class="title mb-3" style="font-size:26px !important;">Click to see other reports</h3>
                    <div class="row g-2 justify-content-center">
                        <div class="col-6 col-md-3"><a t-att-href="'/show_profile/' + answer_token +'?from_choose_report=True'" class="report-link">Perfume Personality Report</a></div>
                        <div class="col-6 col-md-3"><a t-att-href="'/love_match/' + answer_token" class="report-link">Love Match Report</a></div>
                        <div class="col-6 col-md-3"><a t-att-href="'/career_match/' + answer_token" class="report-link">Career Match Report</a></div>
                        <div class="col-6 col-md-3"><a t-att-href="'/soulfulness/' + answer_token" class="report-link">Soulfulness Report</a></div>
                    </div>

                    <!-- Row 2 -->
                    <div class="row g-2 justify-content-center mt-1">
                        <div class="col-6 col-md-3"><a t-att-href="'/five_elements/' + answer_token" class="report-link">5 Elements Report</a></div>
                        <div class="col-6 col-md-3"><a t-att-href="'/thirty_one_types/' + answer_token" class="report-link">31 types Report</a></div>
                        <div class="col-6 col-md-3"><a t-att-href="'/tcm/' + answer_token" class="report-link">TCM Report</a></div>
                        <div class="col-6 col-md-3"><a t-att-href="'/ayurvedic_dosha/' + answer_token" class="report-link">Ayurvedic Dosha Report</a></div>
                    </div>

                    <div class="mt-4">
                         <a t-att-href="'/send_email/' + answer_token" class="email-link">Email me these reports</a>
                    </div>
                    <div class="mt-2">
                        <a href="/my" style="color:#a66f5b;"> I don't want to receive the detailed profile</a>
                    </div>
                </div>
                <div class="fixed-bottom text-center p-3" style="background: #F9F2F0">
                    <!-- <a href="/choose-test" class="text-decoration-none d-flex align-items-center justify-content-center">
                        <img src="/gm_web/static/src/img/prev.svg" alt="Back" class="img-fluid" style="width: 40px; height: 40px; object-fit: contain;"/>
                    </a> -->
                    <img src="/gm_web/static/src/img/logo.png" class="img-fluid mb-2" style="width: 120px;" alt="Logo"/>
                    <!-- <a t-att-href="'/show_avatar/%s' % answer.access_token" class="text-decoration-none d-flex align-items-center justify-content-center">
                        <img src="/gm_web/static/src/img/next.svg" alt="Next" style="width: 40px; height: 40px; object-fit: contain;"/>      
                    </a> -->
                </div>
            </t>
        </template>
    </data>
</odoo>
